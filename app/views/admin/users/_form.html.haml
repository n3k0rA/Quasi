= form_for([:admin, @user]) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :email
    %br
    = f.text_field :email
  .field
    = f.label :town
    %br
    = f.text_field :town
  .field
    = f.label :province
    %br
    = f.text_field :province
  .field
    = f.label :website
    %br
    = f.text_field :website
  .field
    = f.label :pic
    %br
    = f.file_field :pic
  .actions
    = f.submit
