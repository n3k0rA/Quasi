<script type="text/javascript" src="//maps.google.com/maps/api/js?v=3.5&sensor=false&amp;libraries=geometry"></script>
<script type="text/javascript" src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.5/src/markerclusterer_packed.js"></script>

#central_with_bar
  #photo
    = image_tag(@event.pic.url(:original), class:"event_show_photo", :alt =>"Event picture")
    
  #main_details
    #title.capital.red_font.width_total
      %h1
        -if I18n.locale.to_s == "en" && !@event.title_en.empty?
          =@event.title_en
        -elsif I18n.locale.to_s == "eu" && !@event.title_eu.empty?
          = @event.title_eu
        -elsif I18n.locale.to_s == "fr" && !@event.title_fr.empty?
          = @event.title_fr
        -elsif !@event.title_es.empty?
          =@event.title_es
        -elsif !@event.title_eu.empty?
          = @event.title_eu
        -elsif !@event.title_fr.empty?
          =@event.title_fr
        -elsif !@event.title_en.empty?
          = @event.title_en
    %div.width_half
      %b.capital.red_font.width_total 
        = t :event_dates
      %br/
      = l @event.start_date, :format => :long
      %br/
      = l @event.finish_date, :format => :long
    %div.width_half
      %b.capital.red_font.width_total 
        = t :event_price
      %br/
      - if @event.price.nil?
        n/a
      -else
        #{@event.price}â‚¬
    %div.width_half
      %b.capital.red_font.width_total 
        = t :event_place 
      %br/
      = @event.place
      %d.capital
        = @event.town
    %div.width_half
      %b.capital.red_font.width_total 
        = t :event_categories
      %br/
      =@event.categories.map{|category| I18n.t("categories.#{category.name}")}.to_sentence
  
  #event_description
    -if I18n.locale.to_s == "en" && !@event.des_en.empty?
      =simple_format(@event.des_en)
    -elsif I18n.locale.to_s == "eu" && !@event.des_eu.empty?
      = simple_format(@event.des_eu)
    -elsif I18n.locale.to_s == "fr" && !@event.des_fr.empty?
      = simple_format(@event.des_fr)
    -elsif !@event.des_es.empty?
      =simple_format(@event.des_es)
    -elsif !@event.des_eu.empty?
      = simple_format(@event.des_eu)
    -elsif !@event.des_fr.empty?
      =simple_format(@event.des_fr)
    -elsif !@event.des_en.empty?
      = simple_format(@event.des_en)
      
  #event_reminder
    %div
      -if @event.cancelled?
        %h2.capital{:style=>"color:red;"} This event has been cancelled
      -else
        -if (current_user && current_user.events.include?(@event))
          %h3  
            -if ((@event.start_date-Time.now)< 259146.01469397545)
              =t :reminder_soon
            -else
              = t :already_following_event
        -else
          .sp_remind
            =link_to 'remind_me', add_reminder_path(:id => @event.id)   
      
    
      
      
  #tabs
    %ul
      %li
        =link_to I18n.t("comment", :count=> @event.comments.count), '#tabs-1'
      %li
        =link_to I18n.t("interested", :count=> @event.users.count), '#tabs-2'
      %li
        =link_to "Event Info", '#tabs-3'
      %li
        =link_to "Map", '#tabs-4'
    
    #tabs-1
      #new_comment
        #new_comment_form
          = form_for @comment do|f|
            = f.hidden_field :event_id
            %p
              %h3
                = f.label t :do_comment
              %br/
              = f.text_area(:body, :class=>"comment_box")
            %p
              = f.submit t :submit_comment
        #new_comment_user_photo
          -if current_user
            =image_tag(current_user.photo.url(:thumb))
      #all_comments
        = render :partial => 'comment', :collection => @event.comments.order('created_at DESC')
    #tabs-2
      #attenders
        - @event.users.each do |user|
          #an_attender
            #an_attender_photo
              =link_to image_tag(user.photo.url(:thumb), class:"side_pic"), user
            #an_attender_info
              %h3= link_to user.name, user
              =user.town
              %br/
              =user.province
              
              
              
    #tabs-3
      #event_contact_info
        %p
          %b.capital.red_font 
            =t :email
          %br/
          = @event.email
        %p
          %b.capital.red_font
            =t :event_website
          %br/
          = link_to @event.website, @event.website
        %p
          %b.capital.red_font 
            = t :event_phone
          %br/
          = @event.phone
        %p
          %b.capital.red_font
            tickets
          %br/
          = link_to @event.tickets, @event.tickets
        %p
      #event_contact_photo
        %b.capital.red_font 
          =t :event_creator
        -unless @event.user.nil?
          =@event.user.name
          =link_to image_tag(@event.user.photo.url(:thumb)), @event.user
          
    
    #tabs-4
      #gmap
        =gmaps("map_options" => { "detect_location" => true, "auto_zoom" => false, "center_on_user" => true, "zoom" => 17},"markers" => { "data" => @json })
        
      
    



    

-if !@event.cancelled
  =link_to I18n.t('add_translation'), new_translation_path(:id => @event.id)