=@events.count
-@events.each do |event|
  #user_block
    #user_block_pic
      = image_tag(event.pic.url(:medium), class: 'event_block_image', :alt =>'Event Picture')

    #user_block_details{:style=>"width:66.5%;"}
      .event_title.capital
        %b 
          =truncate(strip_tags(event.title), length:60)
      %div
        %d
          =l event.start_date, :format=> :block
        %d.event_town
          =truncate(strip_tags(event.place), length:10)
        %d.capital
          =event.town
      %p
        %small
          =truncate(strip_tags(event.description), length:320)
    #block_info
      .rotate_text
        =link_to 'INFO', event