%h1.out
  -title 'Goazen'
#search
  -@events.each do |event|
    #user_block
      #user_block_pic
        -pic= image_tag(event.pic.url(:medium), class: 'event_block_image', :alt =>'Event Picture')
        =link_to pic, event
      #user_block_details{:style=>"width:66%;"}
        .event_title.capital
          %b 
            -@event=event
            =truncate(strip_tags(render 'layouts/title'), length:30)
        %div
          %d
            =l event.start_date, :format=> :block
          %d.event_town
            =truncate(strip_tags(event.place), length:10)
          %d.capital
            =event.town
        %p
          %small
            =truncate(strip_tags(render 'layouts/description'), length:320)
      #block_info
        .rotate_text
          =link_to 'INFO', event
        
  -if @events.count > 10
    #pagination
      .apple_pagination
        = will_paginate @events