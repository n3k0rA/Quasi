<p id="notice"><%= notice %></p>

<h3>User reminders</h3>


<div>
		<div >
			<% if @user.events.empty? %>
				<p>You have set no reminders. Are you sure you do not like anything?</p>
			<% else %>
				<% @user.events.each do |event| %>
				<% @event = Event.find(event) %>
				 	<div class="entry_side">
							<% image = image_tag(@event.pic.url(:thumb), class: 'list_image')%>
							<%= link_to image, @event %>
						<h4><%= link_to @event.title , @event %> </h4>

						<h5><%= @event.startDate %> | <%= @event.town %></h5>
						<div class="rem_icon">
							<% del_icon = image_tag("icons/DeleteRed.png", class:'icon') %>
							<%= link_to del_icon, del_reminder_path(:id => @event.id),
							 	confirm: 'Are you sure you want to delete this reminder?',
								method: del_reminder_path(:id => @event.id) %>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
	
</div>