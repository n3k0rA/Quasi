= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        //prohibited this user from being saved:
        =t :user_form_error
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label t :user_name
    %br
    = f.text_field :name
  .field
    = f.label t :user_email
    %br
    = f.text_field :email
  .field
    = f.label t :user_town
    %br
    = f.text_field :town
  .field
    = f.label t :user_province
    %br
    = f.text_field :province
  .field
    = f.label t :user_website
    %br
    = f.text_field :website
  .field
    = f.label t :user_pic
    %br
    = f.file_field :photo
  .actions
    = f.submit
