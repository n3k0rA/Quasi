	<div>
		<b><%= link_to 'Messages', account_path %></b>
	</div>
	|
	<div>
		<b><%= link_to 'Reminders', rem_path %></b>
	</div>
	|
	<div>
		<b><%= link_to 'Alarms', events_path %></b>
	</div>
	|
	<div>
		<b><%= link_to 'Uploaded Events', ev_created_path%></b>
	</div>
	|
	<div>
		<b><%= link_to 'Profile', events_path %></b>
	</div>
	|
	<div>
		<b><%= link_to 'Settings', events_path %></b>
	</div>
</div>



<div id="left">
	<div class="block shadow">
		<% @events.each do |event| %>
		<div class="entry_side">
				<% image = image_tag(event.pic.url(:thumb), class: 'side_pic')%>
				<%= link_to image, event %>
			<h4><%= link_to event.title , event %> </h4>
		
			<h6><%= event.sdate %> | <%= event.town %></h6>
		
		</div>
			<% end %>	
	
	</div>
</div>

<div id="right_side">

<p id="notice"><%= notice %></p>

<h2>Events created!</h2>


<div >
	<% if @user.events_created.empty? %>
		<p>No events created so far..</p>
	<% else %>
		<% @user.events.each do |event| %>
		<% @event = Event.find(event) %>
	 		<div class="entry_side">
					<% image = image_tag(@event.pic.url(:thumb), class: 'list_image')%>
					<%= link_to image, @event %>
					<h4><%= link_to @event.title , @event %> </h4>
					<h5><%= @event.sdate %><%= @event.stime %> | <%= @event.town %></h5>
					<td class="list_actions">
						<%= link_to 'Show', @event %><br/>
						<%= link_to 'Edit', edit_event_path(@event) %></br>
						<%= link_to 'Delete', @event,
									confirm: 'Are you sure?',
									method: :delete %>
					</td>
				</div>
				<% end %>
	<% end %>
</div>

</div>
