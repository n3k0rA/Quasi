%h2.capital.theFont
  =title I18n.t(:temporal_translation, :event => @translation.event.title)
%h4 
  =t :translated_by
  = link_to @translation.user.name, @translation.user
  
-if !@translation.comment.nil?
  %h 
    =t :translator_comment
    =@translation.comment
%p    
%small 
  =t :translation_message01
  =t :translation_message02
   
%p 
  =t :translation_message03


#tabs 
  -if I18n.locale.to_s=="en" && !@translation.des_en.empty?
    %ul
      %li
        =link_to I18n.t(:lang_english), '#tabs-4'
      %li
        =link_to I18n.t(:lang_spanish), '#tabs-1'
      %li
        =link_to I18n.t(:lang_basque), '#tabs-2'
      %li
        =link_to I18n.t(:lang_french), '#tabs-3'
  -elsif I18n.locale.to_s=="eu" && !@translation.des_eu.empty?
    %ul
      %li
        =link_to I18n.t(:lang_basque), '#tabs-2'
      %li
        =link_to I18n.t(:lang_spanish), '#tabs-1'
      %li
        =link_to I18n.t(:lang_french), '#tabs-3'
      %li
        =link_to I18n.t(:lang_english), '#tabs-4'
  -elsif I18n.locale.to_s=="fr" && !@translation.des_fr.empty?
    %ul
      %li
        =link_to I18n.t(:lang_french), '#tabs-3'
      %li
        =link_to I18n.t(:lang_basque), '#tabs-2'
      %li
        =link_to I18n.t(:lang_spanish), '#tabs-1'
      %li
        =link_to I18n.t(:lang_english), '#tabs-4'
  -elsif !@translation.des_es.empty?
    %ul
      %li
        =link_to I18n.t(:lang_spanish), '#tabs-1'
      %li
        =link_to I18n.t(:lang_basque), '#tabs-2'
      %li
        =link_to I18n.t(:lang_french), '#tabs-3'
      %li
        =link_to I18n.t(:lang_english), '#tabs-4'
  -else
    %ul
      %li
        =link_to I18n.t(:lang_basque), '#tabs-2'
      %li
        =link_to I18n.t(:lang_spanish), '#tabs-1'
      %li
        =link_to I18n.t(:lang_french), '#tabs-3'
      %li
        =link_to I18n.t(:lang_english), '#tabs-4' 
              
  #tabs-1    
    %p
      -if !@translation.des_es.nil?
        =@translation.title_es
        %br
        =simple_format(@translation.des_es)
      -else
        "No translation so far"
    
  #tabs-2   
    %p
      -if !@translation.des_eu.empty?
        =@translation.title_eu
        %br
        =@translation.des_eu
      -else
        "No translation so far"
  #tabs-3  
    %p
      -if !@translation.des_fr.empty?
        =@translation.title_fr
        %br
        =@translation.des_fr
      -else
        "No translation so far"
  #tabs-4
    %p
      -if !@translation.des_en.empty?
        =@translation.title_en
        %br
        =@translation.des_en
      -else
        "No translation so far"